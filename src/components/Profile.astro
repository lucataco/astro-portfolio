                </svg>
              )}
              {link.name === "Twitter" && (
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                </svg>
              )}
              {link.name === "LinkedIn" && (
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              )}
              {link.name === "PayPal" && (
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M7.076 21.337H2.47a.641.641 0 0 1-.633-.74L4.944.901C5.026.382 5.474 0 5.998 0h7.46c2.57 0 4.578.543 5.69 1.81 1.01 1.15 1.304 2.42 1.012 4.287-.023.143-.047.288-.077.437-.983 5.05-4.349 6.797-8.647 6.797h-2.19c-.524 0-.968.382-1.05.9l-1.12 7.106zm14.146-14.42a3.35 3.35 0 0 0-.607-.541c-.013.076-.026.175-.041.254-.93 4.778-4.005 7.201-9.138 7.201h-2.19a.563.563 0 0 0-.556.479l-1.187 7.527h-.506l-.24 1.516a.56.56 0 0 0 .554.647h3.882c.46 0 .85-.334.922-.788.06-.26.76-4.852.816-5.09a.932.932 0 0 1 .923-.788h.58c3.76 0 6.705-1.528 7.565-5.946.36-1.847.174-3.388-.777-4.471z" />
                </svg>
              )}
              {link.name === "Resume" && (
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" />
                </svg>
              )}
            </span>
            <span class="social-label">{link.name}</span>
            <span class="social-hover-bg"></span>
          </a>
        ))
      }
      <a
        href="mailto:me@lucataco.com"
        aria-label="Email"
        class="social-link"
        style="--delay: 0.5s"
      >
        <span class="social-icon">
          <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path
              d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
            ></path>
          </svg>
        </span>
        <span class="social-label">Email</span>
        <span class="social-hover-bg"></span>
      </a>
    </nav>
  </div>
</section>

<style>
  /* Profile Card - Glassmorphism */
  .profile-card {
    position: relative;
    width: 100%;
    max-width: 420px;
    padding: var(--space-2xl) var(--space-xl);
    background: var(--bg-glass);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--border-subtle);
    border-radius: 24px;
    animation: cardReveal 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s forwards;
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }

  @keyframes cardReveal {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Card Glow Effect */
  .card-glow {
    position: absolute;
    inset: -1px;
    border-radius: 24px;
    background: linear-gradient(
      135deg,
      rgba(251, 191, 36, 0.2) 0%,
      transparent 50%,
      rgba(99, 102, 241, 0.1) 100%
    );
    opacity: 0;
    transition: opacity var(--transition-slow);
    pointer-events: none;
    z-index: -1;
  }

  .profile-card:hover .card-glow {
    opacity: 1;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* Avatar Container */
  .avatar-container {
    position: relative;
    margin-bottom: var(--space-lg);
    animation: avatarReveal 0.6s ease 0.4s forwards;
    opacity: 0;
    transform: scale(0.8);
  }

  @keyframes avatarReveal {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .avatar {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    position: relative;
    z-index: 2;
    border: 3px solid var(--bg-secondary);
    transition: transform var(--transition-base), border-color var(--transition-base);
  }

  .profile-card:hover .avatar {
    transform: scale(1.05);
    border-color: var(--accent);
  }

  /* Avatar Ring Animation */
  .avatar-ring {
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    border: 2px solid transparent;
    background: linear-gradient(135deg, var(--accent), #a855f7, #6366f1) border-box;
    -webkit-mask:
      linear-gradient(#fff 0 0) padding-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: ringRotate 8s linear infinite;
    opacity: 0.6;
  }

  @keyframes ringRotate {
    to {
      transform: rotate(360deg);
    }
  }

  .avatar-ring-pulse {
    position: absolute;
    inset: -12px;
    border-radius: 50%;
    border: 1px solid var(--accent);
    opacity: 0;
    animation: ringPulse 3s ease-in-out infinite;
  }

  @keyframes ringPulse {
    0%,
    100% {
      opacity: 0;
      transform: scale(0.95);
    }
    50% {
      opacity: 0.4;
      transform: scale(1.05);
    }
  }

  /* Name */
  .name {
    font-family: var(--font-display);
    font-size: 2.25rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: -0.02em;
    margin-bottom: var(--space-sm);
    animation: textReveal 0.6s ease 0.5s forwards;
    opacity: 0;
    transform: translateY(10px);
    text-align: center;
  }

  @keyframes textReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Bio */
  .bio {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    text-align: center;
    max-width: 320px;
    animation: textReveal 0.6s ease 0.6s forwards;
    opacity: 0;
    transform: translateY(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .bio-icon {
    display: inline-block;
    color: var(--accent);
    font-family: "SF Mono", Monaco, "Cascadia Code", monospace;
    font-size: 0.875rem;
    font-weight: 600;
    padding: 2px 8px;
    background: var(--accent-subtle);
    border-radius: 4px;
  }

  /* Social Links */
  .social-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-sm);
    width: 100%;
  }

  .social-link {
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    padding: 10px 16px;
    color: var(--text-secondary);
    border-radius: 12px;
    font-size: 0.875rem;
    font-weight: 500;
    overflow: hidden;
    transition:
      color var(--transition-fast),
      transform var(--transition-fast);
    animation: linkReveal 0.5s ease calc(0.7s + var(--delay)) forwards;
    opacity: 0;
    transform: translateY(15px);
  }

  @keyframes linkReveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .social-hover-bg {
    position: absolute;
    inset: 0;
    background: var(--bg-elevated);
    border: 1px solid var(--border-subtle);
    border-radius: 12px;
    opacity: 0;
    transform: scale(0.9);
    transition:
      opacity var(--transition-fast),
      transform var(--transition-fast);
    z-index: -1;
  }

  .social-link:hover {
    color: var(--text-primary);
    transform: translateY(-3px);
  }

  .social-link:hover .social-hover-bg {
    opacity: 1;
    transform: scale(1);
  }

  .social-link:hover .social-icon {
    color: var(--accent);
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    transition: color var(--transition-fast);
  }

  .social-icon svg {
    width: 100%;
    height: 100%;
  }

  .social-label {
    position: relative;
    z-index: 1;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .profile-card {
      padding: var(--space-xl) var(--space-lg);
      margin: 0 var(--space-md);
      border-radius: 20px;
    }

    .name {
      font-size: 1.875rem;
    }

    .bio {
      font-size: 0.9375rem;
    }

    .avatar {
      width: 120px;
      height: 120px;
    }

    .avatar-ring {
      inset: -6px;
    }

    .avatar-ring-pulse {
      inset: -10px;
    }

    .social-link {
      padding: 8px 12px;
      font-size: 0.8125rem;
    }

    .social-icon {
      width: 18px;
      height: 18px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .profile-card,
    .avatar-container,
    .name,
    .bio,
    .social-link {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .avatar-ring {
      animation: none;
    }

    .avatar-ring-pulse {
      animation: none;
      opacity: 0;
    }
  }
</style>
