---
import avatarImage from "../assets/images/avatar.jpg";
import avatarImage2x from "../assets/images/avatar@2x.jpg";

interface SocialLink {
  name: string;
  url: string;
  ariaLabel: string;
}

const socialLinks: SocialLink[] = [
  {
    name: "GitHub",
    url: "https://github.com/lucataco/",
    ariaLabel: "GitHub profile",
  },
  {
    name: "Twitter",
    url: "https://x.com/lucatac0",
    ariaLabel: "Twitter profile",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/lucataco",
    ariaLabel: "LinkedIn profile",
  },
  {
    name: "PayPal",
    url: "https://paypal.me/lucataco",
    ariaLabel: "PayPal",
  },
  {
    name: "Resume",
    url: "/resume.pdf",
    ariaLabel: "Resume",
  },
];
---

<section class="profile-card">
  <div class="card-glow"></div>
  <div class="card-content">
    <!-- Avatar with animated ring -->
    <div class="avatar-container">
      <div class="avatar-ring"></div>
      <div class="avatar-ring-pulse"></div>
      <img
        src={avatarImage.src}
        srcset={`${avatarImage.src} 1x, ${avatarImage2x.src} 2x`}
        alt="Luis D Catacora"
        class="avatar"
        width="140"
        height="140"
        loading="eager"
      />
    </div>

    <!-- Name with elegant typography -->
    <h1 class="name">Luis D Catacora</h1>

    <!-- Bio with refined styling -->
    <p class="bio">
      <span class="bio-icon">&lt;/&gt;</span>
      Computer Engineer who likes to tinker and hack things
    </p>

    <!-- Social Links -->
    <nav class="social-links" aria-label="Social media links">
      {
        socialLinks.map((link, index) => (
          <a
            href={link.url}
            target="_blank"
            rel="noreferrer"
            aria-label={link.ariaLabel}
            class="social-link"
            style={`--delay: ${index * 0.1}s`}
          >
            <span class="social-icon">
              {link.name === "GitHub" && (
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
